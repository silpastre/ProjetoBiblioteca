@model Usuario

<h1>Alerta!</h1>
<h2>Tem certez que deseja excluir o usuário @Model.Nome (@Model.login)?</h2>
<p>Aexclusão é irreversível</p>

<form action="ExcluirUsuario" method="post">
    <input type="hidden" name="id" value="@Model.Id">
    <input name="decisao" type="submit" value="CANCELAR">
    <input name="decisao" type="submit" value="EXCLUIR">
</form>
